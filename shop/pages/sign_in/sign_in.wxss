.item{
  width: 100%;
  height: auto;
  line-height: 60rpx;
  background: #fff;
  border-bottom: 1rpx solid #ccc;
  display: flex;
  flex-flow: row nowrap;
  padding: 2%;
  box-sizing: border-box;
}
.item>view:nth-of-type(1){
  flex: 8
}
.item>view:nth-of-type(2){
  flex: 1;
