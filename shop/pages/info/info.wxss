.order{
  background: #fff;
}
.order_line{
  width: 100%;
  height: 100rpx;
  padding: 3% 2%;
  margin: 0 auto;
  box-sizing: border-box;
  border-bottom:1rpx solid #efefef; 
}
.order_img{
    width: 40rpx;
    height: 50rpx;
    float: left;
    margin-left: 10rpx;
    box-sizing: border-box;
}
.order_line>view{
  float: left;
  text-indent: 15rpx;
  font-size: 28rpx;
  line-height: 60rpx;
}
.right_img{
    width: 40rpx;
    height: 40rpx;
    float: right;
    margin-top: 7.5rpx;
}
.orderList{
  display: flex;
  flex-flow: row nowrap;
  margin: 4% auto;
}
.orderList>view{
  width: 25%;
  height: 130rpx;
  display: flex;
  flex-direction: column;
}
.obligation{
  position: relative
}
.obligation>view{
  font-size: 24rpx;
  text-align: center;
}
.obligation>image{
    width: 60rpx;
    height: 60rpx;
    margin: 4% auto;
}

.line{
  width: 100%;
  height: 20rpx;
  background: #ededed;
}

.user_infos{
  width: 100%;
  background: #fff;
  display: flex;
  flex-flow: row wrap;
  /* padding: 20rpx 0; */
}
.user_infos>view{
  width: 31%;
  text-align: center;
  font-size: 24rpx;
}
.user_infos>view>image{
  width: 60rpx;
  height: 60rpx;
  margin: 6rpx auto;
}
.title{
  width: 100%;
  height: 200rpx;
  text-align: center;
  line-height: 200rpx;
  background: #ededed;
  font-size: 24rpx;
  color: #cdcdcd;
}
.has{
  display: none;
}
.zan_count {
  position: absolute;
  top: -8px;
  right: 15px;
  height: 1.6em;
  min-width: 1.6em;
  line-height: 1.6;
  padding: 0 .4em;
  font-size: 10px;
  font-family: tahoma;
  border-radius: .8em;
  background: #FF4444;
  color: #fff;
  text-align: center;
  white-space: nowrap;
  transform: translateX(50%);
  transform-origin: -10% center;
  z-index: 10;
  box-shadow: 0 0 0 1px #fff;
  box-sizing: border-box;
}