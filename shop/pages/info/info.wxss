page{
  background: #ededed;
  font-size: 30rpx;
}
.user_top{
  width: 100%;
  height: 400rpx;
  background: orange;
  overflow:hidden;

}
.user_info{
  width: 100%;
  height:160rpx;
  display: flex;
  flex-flow: row wrap;
  margin:60rpx auto;
}
.headerImg{
   display: block;
  width: 21%;
  height: 100%;
  border-radius: 50%;
  border: 1rpx solid #ccc;
  margin: 6%;
  overflow: hidden;
}
.headerImgs{
  display: block;
  width: 100%;
  height: 100%;
}
.userName{
  flex: 6;
  height: 100%;
  float: left;
  line-height: 260rpx;
}
/* .integral{
  flex: 1;
  height: 50%;
