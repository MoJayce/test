page {
  font-size: 28rpx;
  background: #f7f7f7;
}

.collect {
  width: 100%;
}

.collect>view {
  width: 100%;
  box-sizing: border-box;
  padding: 2%;
  background: #fff;
  display: flex;
  flex-flow: row nowrap;
  border-bottom: 1rpx solid #ccc;
  position: relative;
}

.collect>view>image {
  width: 20%;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
}

.collect>view>view:nth-of-type(1) {
  margin-left: 24%;
  width: 60%;
  min-height: 150rpx;
  overflow: hidden;
}

.collect>view>view:nth-of-type(2) {
  border: 1px solid #999;
  color: #999;
  font-size: 24rpx;
  border-radius: 10rpx;
  padding: 5rpx;
  overflow: hidden;
  position: absolute;
  top: 50%;
  right: 2%;
  transform: translateY(-50%);
}

.time {
  font-size: 24rpx;
  color: #666;
  position: absolute;
  bottom: 20rpx;
}

.show {
  display: none;
}
