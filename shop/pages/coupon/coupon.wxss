
.home,.info{
  display: none
}
.coupon_code{
  width: 90%;
  height: 4rem;
  margin: 12% auto;
  border: 1rpx solid orange;
  padding: 3%;
  border-radius: 15rpx;
  box-sizing: border-box;
  display: flex;
  flex-flow: row nowrap;
  justify-items: center;
  justify-content: center;
  align-items: center;
}
.coupon_code>input{
  width: 78%;
  height: 1.6rem;
  line-height: 1.6rem;
  border:1rpx solid orange;
  border-radius: 10rpx;
  margin-right: 2%;
  text-indent: 10rpx;
}
.phcolor{
  font-size: 28rpx;
  color: orange;
}


.coupon_code>view{
  width: 20%;
  height: 1.6rem;
  line-height: 1.6rem;
  text-align: center;
  font-size: 28rpx;
  color: #fff;
  border-radius: 10rpx;
  background: #fdaaaa;
}
.coupons{
  width: 90%;
  margin: 5% auto;
  font-size: 30rpx;  
  display: flex;
  flex-flow: column nowrap;
}
.coupons>view:nth-child(1){
  width: 100%;
  height: 70%;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-items: center;
  padding: 5% 0;
  color: #f6e7e9;
  background:#f36272;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;  
}
.coupons>view:nth-child(1)>view:nth-child(1){
  width: 20%;
  text-align: center;
}
.coupons>view:nth-child(1)>view:nth-child(2){
  width: 60%;
  display: flex;
  flex-flow: column nowrap;
}
.coupons>view:nth-child(1)>view:nth-child(3){
  width: 20%;
  background: #f6e7e9;
  margin-right:20rpx; 
  padding: 1%;
  color: #e05a68;
  font-size: 28rpx;
  text-align: center;
  border-radius: 10rpx;
}
.coupons>view:nth-child(2){
  width: 100%;
  height: 30%;  
  padding: 3% 0;
  color: #f6e7e9;
  background: #ca6572;
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;  
  text-indent: 1em;
}
.tocoupon{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #f00;
  position: fixed;
  bottom: 0%;
  border-top:1rpx solid #ccc;
  box-shadow: -10px -10px -5px #888888;
  background: #fff;
}